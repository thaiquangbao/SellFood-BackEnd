<script>
    function openDropdown(element) {
        element.querySelector('.dropdown-menu').style.display = 'block';
         element.querySelector('.dropdown-menu').style.transition = "filter 0.3s ease, transform 0.3s ease";
    }

    function closeDropdown(element) {
        element.querySelector('.dropdown-menu').style.display = 'none';
         element.querySelector('.dropdown-menu').style.transition = "filter 0.3s ease, transform 0.3s ease";
    }
    function toggleDropdown(element, show) {
        element.querySelector('.dropdown-menu').style.display = show ? 'block' : 'none';
         element.querySelector('.dropdown-menu').style.transition = "filter 0.3s ease, transform 0.3s ease";
    }
</script>
<script>
    function hoverEffect(element) {
        var navLink = element.querySelector('.nav-link');
        navLink.style.color = 'rgb(248, 248, 154)';
        navLink.style.marginTop = '2px';
    }

    function unhoverEffect(element) {
        var navLink = element.querySelector('.nav-link');
        navLink.style.color = 'white';
        navLink.style.marginTop = '0';
    }
</script>