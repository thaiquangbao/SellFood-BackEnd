    "@types/chokidar": "^2.1.3",
    "chokidar": "^3.5.3",
    "cloudinary": "^1.41.0",
    "handlebars": "^4.7.8",
    "hbs": "^4.1.2",
    "hbs-utils": "^0.0.4",
    "install": "^0.13.0",
    "mongoose": "^8.0.2",
